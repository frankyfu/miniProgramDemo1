.content
{
  height: 100%;
  display:flex;
  flex-direction:   column;
  align-items: center;
  box-sizing: border-box;
  padding-top:20px;
}
.screen
{
  background-color: #FFFFFFF;
  border-radius:3px;
  text-align:right;
  text-color:black;
  width:720rpx;
  height:100rpx;
  line-height:100rpx;
  padding-right:10rpx;
  margin-bottom:30rpx;
  background-color : wihte;
}
.item
{
  width:160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0,.3);
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}
.buttons{
  display:flex;
  flex-direction:row;
}
.orange{
  color: #fef4e9;
  border: solid 1px #d810d8b9;
  background: #d810d8b9;
}
.blue{
  color: #d9eef7;
  border: solid 1px #0095cd;
  background: #0095cd;
}